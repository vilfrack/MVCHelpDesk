                <tr>
                    <th>@varModulo.ModuloID</th>
                    <th>@varModulo.ModuloDescripcion</th>
                    <th>Usuario</th>
                </tr>
            </thead>
                <tbody>
                    @foreach (var itemModel in Model.Where(w => w.ModuloID == varModulo.ModuloID)
