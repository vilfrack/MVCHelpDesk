                            </td>
                            <td>
                                <label style="padding-left:20px;"> @itemModel.PermisoDescripcion</label>
                            </td>
                            <td>
                                @Html.CheckBox("CheekUsuario", itemModel.CheekUsuarios, new { data_permiso = itemModel.PermisoID, data_modulo = varModulo.ModuloID })
